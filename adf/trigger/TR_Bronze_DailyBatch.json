{
  "name": "TR_Bronze_DailyBatch",
  "properties": {
    "annotations": [
      "Triggers the master Bronze pipeline for daily batch data ingestion."
    ],
    "runtimeState": "Started",
    "pipelines": [
      {
        "pipelineReference": {
          "referenceName": "PL_Bronze_Master",
          "type": "PipelineReference"
        },
        "parameters": {
          "p_frequency_filter": "daily"
        }
      }
    ],
    "recurrence": {
      "frequency": "Day",
      "interval": 1,
      "startTime": "2023-01-01T02:00:00Z",
      "timeZone": "UTC",
      "schedule": {
        "hours": [
          2
        ],
        "minutes": [
          0
        ]
      }
    }
  },
  "type": "Microsoft.DataFactory/factories/triggers"
}